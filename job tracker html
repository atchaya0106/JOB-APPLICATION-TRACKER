<body>
  <h1>Job Application Tracker</h1>

  <h3>Add Application</h3>
  <form id="appForm">
    <input type="text" id="company" placeholder="Company Name" required />
    <input type="text" id="title" placeholder="Job Title" required />
    <select id="status" required>
      <option value="">Select Status</option>
      <option value="Applied">Applied</option>
      <option value="Interview">Interview</option>
      <option value="Offered">Offered</option>
      <option value="Rejected">Rejected</option>
    </select>
    <button type="submit">Add Application</button>
  </form>

  <h3>Applications</h3>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Company</th>
        <th>Title</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody id="appTableBody">
      <!-- Applications will appear here -->
    </tbody>
  </table>

  <script>
    const form = document.getElementById('appForm');
    const tableBody = document.getElementById('appTableBody');

    // Function to fetch and display applications
    async function loadApplications() {
      const res = await fetch('/applications');
      const apps = await res.json();
      tableBody.innerHTML = '';
      apps.forEach(app => {
        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${app.id}</td>
          <td>${app.company}</td>
          <td>${app.title}</td>
          <td>${app.status}</td>
        `;
        tableBody.appendChild(row);
      });
    }

    // Initial load
    loadApplications();

    // Add new application
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const company = document.getElementById('company').value;
      const title = document.getElementById('title').value;
      const status = document.getElementById('status').value;

      if (!company || !title || !status) return alert('All fields are required');

      await fetch('/applications', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ company, title, status })
      });

      form.reset();
      loadApplications();
    });
  </script>
</body>
</html>







